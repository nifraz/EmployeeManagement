@model EmployeeEditViewModel

@{
    ViewBag.Title = "Edit Employee";
    var photoPath = "~/images/" + (Model.ExistingPhotoName ?? "user.svg");
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Edit" method="post">
    <div class="row">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ExistingPhotoName" />
        <div class="col-sm-6 mt-2">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span class="form-text text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="col-sm-6 mt-2">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span class="form-text text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="col-sm-6 mt-2">
            <label asp-for="Department" class="form-label"></label>
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-select">
            </select>
            <span class="form-text text-danger" asp-validation-for="Department"></span>
        </div>
        <div class="col-sm-6 mt-2">
            <label asp-for="Photo" class="form-label"></label>
            <input asp-for="Photo" class="form-control" />
        </div>
        <div class="col-sm-12 mt-2">
            <img class="img-thumbnail" src="@photoPath" alt="@(Model.ExistingPhotoName ?? "No Image")" asp-append-version="true" />
        </div>
    </div>
    <div class="row">
        <div asp-validation-summary="All" class="col-12 text-success mt-2"></div>
        <div class="col-12 mt-2">
            <button class="btn btn-success" type="submit">Update</button>
            <a class="btn btn-danger" asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
        </div>
    </div>
    @*<div class="row">
            <div class="col-12 mt-2">
                The Employee count is: @_employeeRepository.GetAll().Count();
            </div>
        </div>*@
</form>