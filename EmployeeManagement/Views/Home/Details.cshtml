@model HomeDetailsViewModel
@{
    ViewBag.Title = "Employee Details";
    var photoPath = "~/images/" + (Model.Employee?.PhotoName ?? "user.svg");
}

<div class="row">
    <div class="col-sm-6 offset-sm-3">
        <div class="card mt-3">
            <div class="card-header">
                <h1>@Model.Employee?.Name</h1>
            </div>
            <div class="card-body">
                <img class="card-img" src="@photoPath" alt="@(Model.Employee?.PhotoName ?? "No image")" asp-append-version="true" />
                <h5>Employee ID: @Model.Employee?.Id</h5>
                <h5>Employee Name: @Model.Employee?.Name</h5>
                <h5>Employee Email: @Model.Employee?.Email</h5>
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-secondary m-1" asp-controller="Home" asp-action="Index">Back</a>
                <a href="#" class="btn btn-secondary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>

