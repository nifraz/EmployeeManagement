@model CreateEmployeeViewModel
@*@inject IEmployeeRepository _employeeRepository*@

@{ 
    ViewBag.Title = "Add Employee";
}

<form enctype="multipart/form-data" asp-controller="Home" asp-action="Create" method="post">
    <div class="row">
        <div class="col-sm-6 mt-2">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span class="form-text text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="col-sm-6 mt-2">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span class="form-text text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="col-sm-6 mt-2">
            <label asp-for="Department" class="form-label"></label>
            <select asp-for="Department" asp-items="Html.GetEnumSelectList<Dept>()" class="form-select">
                <option value="" selected disabled hidden>Please Select One</option>
            </select>
            <span class="form-text text-danger" asp-validation-for="Department"></span>
        </div>
        <div class="col-sm-6 mt-2">
            <label asp-for="Photo" class="form-label"></label>
            <input asp-for="Photo" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div asp-validation-summary="All" class="col-12 text-success mt-2"></div>
        <div class="col-12 mt-2">
            <button class="btn btn-success" type="submit">Save</button>
        </div>
    </div>
    @*<div class="row">
        <div class="col-12 mt-2">
            The Employee count is: @_employeeRepository.GetAll().Count();
        </div>
    </div>*@
</form>