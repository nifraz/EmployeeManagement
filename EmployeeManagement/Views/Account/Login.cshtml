@model LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h3>User Login</h3>
<form asp-controller="Account" asp-action="Login" method="post">
    <div class="row">
        <div class="col-12 mt-2">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span class="form-text text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="col-12 mt-2">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" class="form-control" placeholder="Password" />
            <span class="form-text text-danger" asp-validation-for="Password"></span>
        </div>
        <div class="col-12 mt-2">
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" checked />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            @*@Html.DisplayNameFor(m => m.RememberMe)*@
        </div>
    </div>
    <div class="row">
        <div asp-validation-summary="All" class="col-12 text-danger mt-2"></div>
        <div class="col-12 mt-2">
            <button class="btn btn-success" type="submit">Login</button>
        </div>
    </div>
</form>