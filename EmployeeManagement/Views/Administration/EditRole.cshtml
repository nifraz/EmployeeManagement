@model RoleEditViewModel

@{
    ViewBag.Title = "Edit Role";
}
<h4>Edit Role</h4>

<form method="post">
    <div class="row">
        <div class="col-sm-6 mt-2">
            <label asp-for="Id" class="form-label"></label>
            <input asp-for="Id" class="form-control" placeholder="ID" disabled />
        </div>
        <div class="col-sm-6 mt-2">
            <label asp-for="RoleName" class="form-label"></label>
            <input asp-for="RoleName" class="form-control" placeholder="Role Name" />
            <span class="form-text text-danger" asp-validation-for="RoleName"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card mt-2">
                <div class="card-header">
                    <h4>Users in this Role</h4>
                </div>
                <div class="card-body">
                    @if (Model.Users.Any())
                    {
                        foreach (var user in Model.Users)
                        {
                            <h5>@user</h5>
                        }
                    }
                    else
                    {
                        <h5>No User found in this Role</h5>
                    }
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleid="@Model.Id">Add / Remove User</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div asp-validation-summary="All" class="col-12 text-danger"></div>
        <div class="col-12 mt-2">
            <button class="btn btn-success" type="submit">Update</button>
            <a class="btn btn-danger" asp-controller="Administration" asp-action="ListRoles">Cancel</a>
        </div>
    </div>
</form>