@model IList<RoleUserViewModel>

@{
    ViewBag.Title = "Add or Remove Users from Role";
    var roleId = ViewBag.RoleId;
}

<h4>Edit Role</h4>

<form method="post">
    <div class="row">
        <div class="col-12">
            <div class="card mt-2">
                <div class="card-header">
                    <h4>Add or Remove Users from Role</h4>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                    <div class="form-check">
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].Username" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].Username</label>
                    </div>
                    }
                </div>
                <div class="card-footer">
                    <button class="btn btn-success" type="submit">Update</button>
                    <a class="btn btn-warning" asp-controller="Administration" asp-action="EditRole" asp-route-id="@roleId">Cancel</a>
                </div>
            </div>
        </div>
    </div>
</form>